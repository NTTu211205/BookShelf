<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="12dp"> <!-- Thêm khoảng cách giữa các item -->

    <!-- "FEATURED COLLECTION" (Tiêu đề phụ) -->


    <!-- "Tiểu sử - Hồi ức" (Tiêu đề chính) -->
    <TextView
        android:id="@+id/textView_featured_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times"
        android:text="Tiểu sử - Hồi ức"
        android:textColor="#AAAAAA"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageView_featured_books"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#444444"
            android:src="@drawable/ic_arrow_forward" />
        <!-- Thay src bằng ảnh của bạn -->

    </androidx.cardview.widget.CardView>

</LinearLayout>
